.flex.flex-col
  .-my-2.overflow-x-auto.sm:-mx-6.lg:-mx-8
    .py-2.align-middle.inline-block.min-w-full.sm:px-6.lg:px-8
      .overflow-hidden.border-2.border-pink-100.sm:rounded-lg
        %table.min-w-full.divide-y-2.divide-pink-100.memberships-of-user
          %thead.bg-pink-50
            %tr.border-0.border-b-1
              %th.px-6.py-3.text-left.text-xs.font-medium.text-pink-700.uppercase.tracking-wider{ scope: 'col', class: 'w-2/3' }
                = t('activerecord.attributes.team.name')
              %th.px-6.py-3.text-right.text-xs.font-medium.text-pink-700.uppercase.tracking-wider{ scope: 'col', class: 'w-1/6' }
                = t('shared.your_rank')
              %th.px-6.py-3.text-right.text-xs.font-medium.text-pink-700.uppercase.tracking-wider{ scope: 'col', class: 'w-1/6' }
                = t('activerecord.attributes.team.members_count_short')

          %tbody.bg-white.divide-y-2.divide-pink-100
            = render MembershipOfUserRowComponent.with_collection(@memberships_of_user)
  .create-team
    = link_to t('teams.actions.new'), new_team_path, class: 'block w-full text-center my-8 px-4 py-8 rounded border-2 border-dashed text-gray-500'
