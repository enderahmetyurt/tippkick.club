!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title tippkick.club
    %meta{:content => "width=device-width,initial-scale=1", :name => "viewport"}/
    = csrf_meta_tags
    = csp_meta_tag
    = action_cable_meta_tag
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    .sticky.top-0
      = render NavigationComponent.new(signed_in: signed_in?)

    .max-w-7xl.mx-auto.p-4.lg:p-8.sm:p-6
      = yield :backlink

      .flash-messages
        - if notice
          .text-green-500.border.border-green-500.rounded-lg.px-5.py-4.text-xs.mb-5
            = notice
        - if alert
          .text-purple-500.border.border-purple-500.rounded-lg.px-5.py-4.text-xs.mb-5
            = alert

      .block.py-8
        = yield

      %footer.mx-4.my-20
