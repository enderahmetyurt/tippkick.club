%h2= t('shared.sign_in')

= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'tippkick-form'}) do |f|
  .field.my-4
    = f.label :email, class: 'label'
    = f.email_field :email, autofocus: true, autocomplete: 'email', class: 'input w-full'
  .field.my-4
    = f.label :password, class: 'label'
    = f.password_field :password, autocomplete: 'current-password', class: 'input w-full'
  - if devise_mapping.rememberable?
    .field.my-4
      = f.check_box :remember_me, class: 'checkbox'
      = f.label :remember_me, class: 'label-checkbox'
  .actions.mt-5.grid.grid-cols-1.gap-4
    = f.submit t('shared.sign_in'), class: 'button w-full'
    = link_to t('shared.sign_up'), new_registration_path(resource_name), class: 'hollow-button w-full'
    = link_to t('shared.forgot_your_password'), new_password_path(resource_name), class: 'shy-link mt-2 w-full'
