%h1= @team.name

- if allowed_to?(:invite?, @team)
  .my-5
    = render InvitationLinkComponent.new(invitation_link: @team.decorate.invitation_link)

%section#memberships.mt-5
  %h2= t('shared.ranking')
  = render TeamMembershipsComponent.new(team: @team, params: params)

- if allowed_to?(:leave?, @team)
  .member-actions.mt-10
    = link_to t('teams.actions.leave'), leave_team_path(@team), class: 'dangerous-button',data: { confirm: t('shared.are_you_sure') }

- if allowed_to?(:update?, @team)
  .mt-16
    %h2= t('shared.admin')
    .coach-actions.grid.grid-cols-1.gap-4
      = link_to t('.edit_team'), edit_team_path(@team), class: 'hollow-button'
      = link_to t('.delete_team'), team_path(@team), method: :delete, class: 'dangerous-button', data: { confirm: t('shared.are_you_sure') }
